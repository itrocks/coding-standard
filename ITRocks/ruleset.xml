<?xml version="1.0"?>
<ruleset name="it.rocks">
    <description>The it.rocks coding standards.</description>

    <!-- PHP code MUST use only UTF-8 without BOM. -->
    <rule ref="Generic.Files.ByteOrderMark"/>

    <!-- Tabs should represent 4 spaces. -->
    <arg name="tab-width" value="4"/>

    <!-- Indent using tabs. -->
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="tabIndent" value="true"/>
        </properties>
    </rule>

    <rule ref="Squiz.Commenting.DocCommentAlignment"/>
    <rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
    <rule ref="Generic.NamingConventions.UpperCaseConstantName"/>

    <rule ref="PSR1.Classes.ClassDeclaration"/>

    <!-- Warn about lines longer than 98 chars, and error for lines longer than 118 chars. -->
    <!--<rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="98" />
            <property name="absoluteLineLimit" value="118" />
        </properties>
    </rule>-->
</ruleset>
